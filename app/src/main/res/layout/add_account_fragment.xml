<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ui.expense.AddExpenseFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_top_register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioGroup
                android:id="@+id/radio_group"
                android:checkedButton="@+id/radio_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <RadioButton
                    android:id="@+id/radio_button_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/purple_200"
                    android:buttonTint="@color/purple_200"
                    android:text="Entrada"/>
                <RadioButton
                    android:id="@+id/radio_button_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/purple_200"
                    android:buttonTint="@color/purple_200"
                    android:text="Saída"/>
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:passwordToggleTint="@color/grey"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:textColorHighlight="@color/grey"
                app:boxStrokeColor="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radio_group"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:hint="Nome"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/grey"
                    android:visibility="visible"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:passwordToggleTint="@color/grey"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:textColorHighlight="@color/grey"
                app:boxStrokeColor="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_name"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Valor"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/grey"
                    android:visibility="visible"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:passwordToggleTint="@color/grey"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:textColorHighlight="@color/grey"
                app:boxStrokeColor="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_value"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="Descrição"
                    android:lines="1"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/grey"
                    android:visibility="visible"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_years"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="false"
                android:theme="@style/ExposedDropdownMenu"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:textColorHighlight="@color/grey"
                app:boxStrokeColor="@color/purple_200"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_description">

                <AutoCompleteTextView
                    android:id="@+id/drop_menu_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_200"
                    android:background="@null"
                    android:inputType="none"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escolha o vencimento"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="false"
                android:theme="@style/ExposedDropdownMenu"
                android:textColorHint="@color/grey"
                android:textColor="@color/grey"
                android:textColorHighlight="@color/grey"
                app:boxStrokeColor="@color/purple_200"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_years">

                <AutoCompleteTextView
                    android:id="@+id/drop_menu_due_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_200"
                    android:background="@null"
                    android:inputType="none"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_jan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Janeiro"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_due_date"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_feb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fevereiro"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toEndOf="@+id/checkbox_jan"
                app:layout_constraintEnd_toStartOf="@+id/checkbox_mar"
                app:layout_constraintTop_toBottomOf="@+id/til_due_date"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_mar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Março"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toEndOf="@+id/checkbox_feb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_due_date"
                />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_apr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abril"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toStartOf="@+id/checkbox_jan"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_jan"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_mai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maio"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toStartOf="@+id/checkbox_feb"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_feb"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_jun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Junho"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toStartOf="@+id/checkbox_mar"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_mar"
                />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_jul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Julho"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toStartOf="@id/checkbox_apr"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_apr"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agosto"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toStartOf="@+id/checkbox_mai"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_mai"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_sep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setembro"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toStartOf="@+id/checkbox_jun"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_jun"
                />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outubro"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toStartOf="@id/checkbox_jul"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_jul"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_nov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novembro"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toStartOf="@+id/checkbox_ago"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_ago"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_dez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dezembro"
                android:textColor="@color/purple_200"
                android:buttonTint="@color/purple_200"
                app:layout_constraintStart_toStartOf="@+id/checkbox_sep"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_sep"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_account"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="64dp"
                app:cornerRadius="20dp"
                android:enabled="true"
                android:text="Adicionar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_dez"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ProgressBar
                android:id="@+id/loading_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/purple_200"
                android:elevation="8dp"
                tools:visibility="visible"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/btn_add_account"
                app:layout_constraintEnd_toEndOf="@+id/btn_add_account"
                app:layout_constraintStart_toStartOf="@+id/btn_add_account"
                app:layout_constraintTop_toTopOf="@+id/btn_add_account" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>